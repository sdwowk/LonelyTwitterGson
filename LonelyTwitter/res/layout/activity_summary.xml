<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberTweetsText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.lonelytwitter.SummaryActivity" >

    <TextView
        android:id="@+id/numberTweetsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="@string/number_of_tweets_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/latencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/numberTweetsEdit"
        android:layout_below="@+id/latencyBetweenTweets"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/averageLengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latencyBetweenTweets"
        android:layout_below="@+id/latencyText"
        android:layout_marginTop="21dp"
        android:text="@string/average_length_of_tweets_char_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/lengthOfTweetsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/averageLengthTextView"
        android:layout_below="@+id/averageLengthTextView"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/numberTweetsEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/numberTweetsTextView"
        android:layout_marginRight="31dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/latencyBetweenTweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numberTweetsTextView"
        android:layout_below="@+id/numberTweetsEdit"
        android:layout_marginTop="45dp"
        android:text="@string/latency_between_tweets_s_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
